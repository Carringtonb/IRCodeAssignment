<!Doctype html>
<header>
    @*this block of code will refresh the page and its data every 60 seconds / 1 minute*@
    <meta http-equiv="refresh" content="60">
</header>
<head>
    <title>Cisco Video Endpoints Diagnostics</title>
</head>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
@*<link rel="stylesheet" href="~/Styles/StyleSheet.css" />*@
<!--Traverse through the Model and output each of the line items in the xml file.-->
@*Table for System Info*@
<div>
    <table class="table table-dark">
        <tr>
            <th>Product Id</th>
            <th>Product Platform</th>
            <th>Product Type</th>
            <th>Software Details</th>
            <th>Diagnostics Information</th>
            <th>State</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @if (!String.IsNullOrEmpty(item.ProductID)) {<td> @item.ProductID </td>}
                @if (!String.IsNullOrEmpty(item.ProductPlatform)) {<td> @item.ProductPlatform </td>}
                @if (!String.IsNullOrEmpty(item.ProductType)) {<td> @item.ProductType </td>}
                @if (!String.IsNullOrEmpty(item.SoftwareDetails)) {<td> @item.SoftwareDetails </td>}
                @if (!String.IsNullOrEmpty(item.DiagnosticInformation)) {<td> @item.DiagnosticInformation </td>} 
                @if (!String.IsNullOrEmpty(item.State))  {<td> @item.State </td>}
            </tr>
        }
    </table>
</div>
@*Table for call information*@
<div>
    <table class="table table-dark">
        <tr>
            <th>Answer State</th>
            <th>Call Type</th>
            <th>Callback Number</th>
            <th>Device Type</th>
            <th>Direction</th>
            <th>Display Name</th>
            <th>Duration</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @*@if (item.AnswerState == "Answered")
                {
                <td style="color: green">@item.AnswerState</td>
                }
                else
                {
                    <td style="color: red">@item.AnswerState</td>
                }*@
                @if (!String.IsNullOrEmpty(item.AnswerState) && item.AnswerState == "Answered") {<td style="color: green"> @item.AnswerState </td>}
                @if (!String.IsNullOrEmpty(item.AnswerState) && item.AnswerState != "Answered") {<td style="color: red"> @item.AnswerState </td>}
                @if (!String.IsNullOrEmpty(item.CallType))  {<td> @item.CallType </td>}
                @if (!String.IsNullOrEmpty(item.CallbackNum))  {<td> @item.CallbackNum </td>}
                @if (!String.IsNullOrEmpty(item.DeviceType))  {<td> @item.DeviceType </td>}
                @if (!String.IsNullOrEmpty(item.Direction))  {<td> @item.Direction </td>}
                @if (!String.IsNullOrEmpty(item.DisplayName))  {<td> @item.DisplayName </td>}
                @if (!String.IsNullOrEmpty(item.Duration))  {<td> @item.Duration </td>}
            </tr>
        }
    </table>
</div>
@*Table for Network info*@
<div>
    <table class="table table-dark">
        <tr>
            <th>Device ID</th>
            <th>Platform</th>
            <th>MAC Address</th>
            <th>IPv4 Address</th>
            <th>Ipv6 Address</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @if (!String.IsNullOrEmpty(item.DeviceID))  {<td> @item.DeviceID </td>}
                @if (!String.IsNullOrEmpty(item.Platform))  {<td> @item.Platform </td>}
                @if (!String.IsNullOrEmpty(item.MACAddress))  {<td> @item.MACAddress </td>}
                @if (!String.IsNullOrEmpty(item.IPv4Address))  {<td> @item.IPv4Address</td>}
                @if (!String.IsNullOrEmpty(item.IPv6Address) && item.IPv6Address == "No Value") {<td style="color: red"> @item.IPv6Address </td>}
                @if (!String.IsNullOrEmpty(item.IPv6Address) && item.IPv6Address != "No Value") {<td style="color: green"> @item.IPv6Address </td>}
            </tr>
        }
    </table>
</div>

<div>
    <table class="table table-dark">
        <tr>
            <th>Peripheral Hardware Info</th>
            <th>Peripheral ID</th>
            <th>Peripheral Name</th>
            <th>Peripheral Software Info</th>
            <th>Peripheral Status</th>
            <th>Peripheral Type</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.PeriHardware</td>
        <td>@item.PeriID</td>
        <td>@item.PeriName</td>
        <td>@item.PeriSoftware</td>
        @if (item.PeriStatus == "Connected")
        {
            <td style="color: green">@item.PeriStatus</td>
        }
        else
        {
            <td style="color: red">@item.PeriStatus</td>
        }
        <td>@item.PeriType</td>
    </tr>

        }
    </table>
</div>

<div>
    <table class="table table-dark">
        <tr>
            <th>System Time</th>
            <th>Contact Name</th>
            <th>Contact Number</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Time</td>
                <td>@item.Name</td>
                <td>@item.Number</td>
            </tr>
        }
    </table>
</div>
